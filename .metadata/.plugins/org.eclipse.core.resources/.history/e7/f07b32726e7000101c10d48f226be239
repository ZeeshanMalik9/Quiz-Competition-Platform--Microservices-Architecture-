package com.proj.controller;

import com.proj.models.Response;
import com.proj.models.WrapperQuestions;
import com.proj.services.QestionService;
import com.proj.services.QuizeService;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.ResponseEntity;
import org.springframework.web.bind.annotation.*;

import java.util.List;

@RestController
@RequestMapping("/quiz")
public class QuizController {

    private final QestionService qestionService;

    @Autowired
    private QuizeService quizeService;

    QuizController(QestionService qestionService) {
        this.qestionService = qestionService;
    }

    @PostMapping("/create")
    public ResponseEntity<String> createQuiz(@RequestParam String catagory,
                                             @RequestParam String title,
                                             @RequestParam int qNum) {
        return quizeService.createQuiz(catagory, title, qNum);
    }

    @GetMapping("/get/{id}")
    public ResponseEntity<List<WrapperQuestions>> getWrapperQuestions(@PathVariable("id") int id) {
        return quizeService.getWrapperQustions(id);
    }
    
    @PostMapping("/submit/{id}")
    public ResponseEntity<String> getSubmitResult(@PathVariable("id") int id,
    												@RequestBody List<Response> response){
    	return quizeService.getSubmitResult(id,response);
    }


}
